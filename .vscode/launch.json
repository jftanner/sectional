{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Mocha Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "FORCE_COLOR": "1"
            },
            "cwd": "${workspaceFolder}",
            "outputCapture": "std"
        },
        {
            "name": "Mocha Tests w/Coverage",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/c8/bin/c8.js",
            "internalConsoleOptions": "openOnSessionStart",
            "args": [
                "${workspaceFolder}/node_modules/mocha/bin/_mocha",
                "--inspect-brk"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "FORCE_COLOR": "1"
            },
            "cwd": "${workspaceFolder}",
            "outputCapture": "std",
            "autoAttachChildProcesses": false
        }
    ]
}